<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gallery">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.NoActionBar">
        <activity android:name=".activity.GalleryActivity">

        </activity>
        <activity android:name=".activity.ViewItemActivity"
            android:theme="@style/Theme.MaterialComponents.NoActionBar.Bridge">


        </activity>
        <activity android:name=".activity.EditItemActivity"
            android:theme="@style/Theme.MaterialComponents.NoActionBar.Bridge">


        </activity>
        <activity android:name=".activity.ViewAlbumActivity">

        </activity>
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.InfoItemActivity" />
        <activity android:name=".activity.PrivateAlbumActivity"
            android:windowSoftInputMode="adjustResize">

        </activity>
    </application>
    <uses-feature android:name="android.hardware.camera.any" />
    <uses-permission android:name="android.permission.CAMERA" />
</manifest>